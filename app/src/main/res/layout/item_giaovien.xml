<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_lv_ct_order">
        <ImageView
            android:id="@+id/image_GV"
            android:padding="10sp"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:src="@drawable/giaovien" />
        <TextView
            android:id="@+id/tv_TenGV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_GV"
            android:text="Tên giáo viên: "
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_NamSinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_GV"
            android:layout_below="@+id/tv_TenGV"
            android:text="Năm sinh: "
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginTop="10sp"/>
        <TextView
            android:id="@+id/tv_GioiTinhGV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính: "
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/image_GV"
            android:layout_below="@+id/tv_NamSinh"
            android:layout_marginTop="10sp"/>
    </RelativeLayout>
</LinearLayout>